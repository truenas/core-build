# Fresh installs don't need this.
# However, if the package name changed, we would.

#post-install = 
#	if [ -f /data/freenas-v1.db ]; then
#	   /usr/bin/touch /data/cd-upgrade
#	   /usr/bin/touch /data/need-update
#	fi
#	test -f /data/freenas-v1.db && \
#		/usr/bin/yes | /usr/local/bin/python \
#		            /usr/local/www/freenasUI/manage.py migrate --all --merge --delete-ghost-migrations

post-upgrade = 
	rm -rf /usr/local/www/freenasUI/api
	rm -rf /usr/local/www/freenasUI/documentantion
	rm -rf /usr/local/www/freenasUI/dojango
	rm -rf /usr/local/www/freenasUI/templates
	rm -rf /usr/local/www/freenasUI/jails
	rm -rf /usr/local/www/freenasUI/plugins
	rm -rf /usr/local/www/freenasUI/reporting
	rm -rf /usr/local/www/freenasUI/support
	rm -rf /usr/local/www/freenasUI/tools
	touch /tmp/.sqlite3_ha_skip
	yes | /usr/local/bin/python /usr/local/www/freenasUI/manage.py migrate --all --merge --delete-ghost-migrations > "/data/update.failed" 2>&1 && rm -f /data/update.failed
	rm -f /tmp/.sqlite3_ha_skip

[Services]

# This is a list of comma-seperated services provided by this package.
services = WebUI

# This is a list of comma-seperated services that will always be
# be restarted when this package is update.  "all" means all services
# provided by this package.
restart = all
